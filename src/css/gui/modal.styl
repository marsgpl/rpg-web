#gui .modal
    position fixed
    background rgba(0,0,0,.5)
    border-radius 3px
    >.title
        color #fff
        line-height 38px
        padding 0 38px 0 10px
        background rgba(0,0,0,.1)
        cursor move
        >.close
            position absolute
            top 0
            right 0
            width 38px
            height 38px
            cursor pointer
            background url("../img/gui/close.svg") no-repeat center
            background-size 11px 11px
            opacity .8
            transition opacity .2s
            &:hover
                opacity 1
