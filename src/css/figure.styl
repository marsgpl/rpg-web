/**/

#mount .figure
    position absolute
    >.bg
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        svg
            max-width 100%
            max-height 100%
            *
                cursor pointer
        &.se
        &.e
        &.ne
        &.n
            transform scale(-1,1)
    &.unit
        &.Player.current
            >.hp
            >.bg svg *
                cursor default
        >.name
            position absolute
            top -26px
            white-space nowrap
            text-align center
            color #fff
            text-shadow 1px 1px 1px rgba(95, 95, 95, 0.4)
            left -20px
            right -20px
        >.hp
            position absolute
            top -38px
            left -5px
            right -5px
            height 8px
            background #9a9a9a
            opacity .7
            cursor pointer
            >.bar
                position absolute
                top 0
                left 0
                height 8px
                background #ff2b2b
