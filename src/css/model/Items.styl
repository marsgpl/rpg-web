#mount .figure.item
    &.Boots
        transform scaleX(-1)
        filter fliph
    &.Shirt
        transform rotate(-62deg) skew(11deg, 10deg)
    &.Vest
        transform rotate(-37deg) skew(1deg, 19deg)
    &.Shield
        transform rotate(62deg) skew(-7deg, -15deg)
    &.ShieldRound
        transform rotateX(43deg)
    &.Jacket
        transform rotate(-245deg) skew(10deg, 10deg)
    &.Pants
        transform rotate(134deg) skew(3deg, 20deg)
    &.Helm
        transform rotate(-15deg)
    &.Sword
        transform rotate(42deg) skew(-10deg, -12deg)
    &.Bands
        transform rotate(120deg) skew(-18deg, 25deg)
    &.Crown
        transform rotate(6deg)
